
extends ../application

block title
	| Delete "#{time.title}"?

block document
	.document.paper
		article.time
			.section
				header.tac
					h1 #{time.title}
					h2 #{time.subtitle}
				.pamphlet
					.content !{time.content}
			.section
				.pamphlet.tac
					form(method='post')
						p Are you sure you want to delete this event time?
						input(type='hidden', name='action', value='delete')
						.btn-group
							a.btn.btn-primary(href='/times/'+time._id) Never Mind
							input.btn.btn-danger(type='submit', value='Yes, Destroy It.')
