
extends ../application

block title
	| Service Sheet for the Class of #{year}

block document
	.document.paper
		.document-layout
			.section.section-header.section-header-navbar
				h1 
					.mega-octicon-tab
						span.mega-octicon.octicon-organization
					| Service Sheet for #{year}

			.section 
				- var now = (new Date()).getFullYear() + 1;
				p
					b Years: 
					for year in range(2015, now - 1)
						a(href='/admin/members/service-sheet/'+year) #{year}
						|  &mdash; 
					a(href='/admin/members/service-sheet/'+now) #{now}


			.section
				if users.length
					table.table-member.sortable
						thead
							tr
								th Name
								th Hours
						tbody
							for user in users
								tr.table-member-row
									td.table-member-name
										a(href='/members/'+user._id)= user.name
									td= user.hours
									
				else
					p There are no members in this class.

