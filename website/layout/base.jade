html
	head
		title 
			block title
				| #{item.title}

		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width,initial-scale=1')
		meta(http-equiv='Content-type', content='text/html;charset=UTF-8')

		meta(name='author', content=(item.author || g.author))
		meta(name='description', content=(item.description || g.description))
		meta(name='keywords', content=(item.keywords || g.keywords || []).join(', '))

		meta(itemprop='name', content=title)
		meta(itemprop='description', content=(item.description || g.description))

		link(rel='canonical', href=g.website+(item.hrefpath || '/'))
		link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
		link(rel='stylesheet', href='/assets/stylesheets/website.css', type='text/css')

